@model TrueJobs.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<head>
    <style>
        body {
            background-image: linear-gradient(rgba(0, 142, 99, 0.1), rgba(0, 0, 0, 0.1)), url('../../Content/img_biz/facts-bg.jpg');
            
            background-size: cover;
        }
    </style>
</head>



<main id="main" style="margin-top:100px">


    <br />
    <br />
  
    <br />
    

    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h2 style="text-align:center">Create a new account</h2>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @*<div class="col-md-2"></div>
                            <div class="col-md-10">
                                <input type="radio" name="radio" id="1" value="candidat" />Caut loc de munca
                                <input type="radio" name="radio" id="2" value="companie" />Sunt companie
                            </div>*@
                        @*@Html.RadioButtonFor(m => m.YesNo, "Caut loc de munca")
                            @Html.RadioButtonFor(m => m.YesNo, "Sunt Companie")*@
                        <div class="col-md-2">Cauti loc de munca?</div>
                        <div class="col-md-10">
                            @*@Html.RadioButtonFor(model => model.YesNo, "Yes", true) Da  @Html.RadioButtonFor(model => model.YesNo, "No", false) Nu, sunt companie*@
                            @Html.RadioButtonFor(model => model.YesNo, true) Da
                            @Html.RadioButtonFor(model => model.YesNo, false) Nu, sunt companie
                        </div>



                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Register" />
                        </div>
                    </div>
                }
            </div>
            <div class="col-lg-2"></div>
        </div>
    </div>
    <br />
    <br />



    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</main>